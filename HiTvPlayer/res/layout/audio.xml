<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lay_audio"
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/custom_view_bg"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tv_audio_title"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/audio_title"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <LinearLayout
            android:id="@+id/lay_audio_track"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_audio_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_icon_left"
                android:contentDescription="@string/iv_desc"/>

            <TextView
                android:id="@+id/tv_audio_s"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:background="@drawable/common_input_normal"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/audio_s"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_audio_l"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:background="@drawable/common_input_normal"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/audio_l"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_audio_r"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:background="@drawable/common_input_normal"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/audio_r"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_audio_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_icon_right"
                android:contentDescription="@string/iv_desc"/>
        </LinearLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@drawable/common_line" />

        <ListView
            android:id="@+id/lv_audio_list"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:divider="@drawable/common_line"
            android:fadingEdge="none"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:listSelector="@drawable/audio_list_selector" >

        </ListView>
    </LinearLayout>

</merge>
