<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lay_cc_nodata"
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/custom_view_bg"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/imageViewL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:contentDescription="@string/hello"
                android:src="@drawable/common_arrow01" />

            <TextView
                android:id="@+id/tv_cc_type_title"
                android:layout_width="200dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:ellipsize="marquee"
                android:gravity="center_vertical|center_horizontal"
                android:singleLine="true"
                android:text="@string/hello"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:id="@+id/ImageViewR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:contentDescription="@string/hello"
                android:src="@drawable/common_arrow02" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_cc_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:divider="@drawable/common_line"
            android:fadingEdge="none"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:listSelector="@drawable/subtitle_list_selector" >
        </ListView>
    </LinearLayout>

</RelativeLayout>
