<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480dp"
    android:layout_height="280dp"
    android:background="@drawable/custom_setting_view_bg"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_epg_program_event_description_title"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/epg_event_ok_tip"
        android:textColor="@color/white"
        android:textSize="24sp" >
    </TextView>

    <LinearLayout
        android:id="@+id/llay_epg_program_event_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_epg_program_event_time"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:singleLine="true"
            android:ellipsize="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@string/string_null"
            android:textColor="@color/white"
            android:textSize="18sp" >
        </TextView>

        <TextView
            android:id="@+id/tv_epg_program_event_name"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="@string/string_null"
            android:textColor="@color/white"
            android:textSize="18sp" >
        </TextView>
   </LinearLayout>

   <TextView
            android:id="@+id/tv_epg_program_event_detail_description_title"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:ellipsize="end"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="@string/epg_event_description"
            android:textColor="@color/white"
            android:textSize="20sp" >
   </TextView>



     <ScrollView
            android:layout_width="420dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <TextView
                android:id="@+id/tv_epg_program_event_detail_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="@string/string_null"
                android:textColor="@color/white"
                android:textSize="18sp" >
            </TextView>
        </ScrollView>


</LinearLayout>
