<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

         <TextView
             android:id="@+id/stack_version"
             android:layout_width="400dp"
             android:layout_height="60dp"
             android:textSize="20sp"
             android:layout_weight="1"
             android:gravity="left|center_vertical"
             android:paddingLeft="180dp"
             android:text="@string/setting_stack_version" />

         <TextView
             android:id="@+id/stack_version_value"
             android:layout_width="wrap_content"
             android:layout_height="60dp"
             android:textSize="20sp"
             android:layout_weight="1"
             android:gravity="left|center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

         <TextView
             android:id="@+id/javaapi_version"
             android:layout_width="400dp"
             android:layout_height="60dp"
             android:textSize="20sp"
             android:layout_weight="1"
             android:gravity="left|center_vertical"
             android:paddingLeft="180dp"
             android:text="@string/setting_java_api_version" />

         <TextView
             android:id="@+id/javaapi_version_value"
             android:layout_width="wrap_content"
             android:layout_height="60dp"
             android:textSize="20sp"
             android:layout_weight="1"
             android:gravity="left|center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

         <TextView
             android:id="@+id/app_version"
             android:layout_width="400dp"
             android:layout_height="60dp"
             android:textSize="20sp"
             android:layout_weight="1"
             android:gravity="left|center_vertical"
             android:paddingLeft="180dp"
             android:text="@string/setting_app_version" />

         <TextView
             android:id="@+id/app_version_value"
             android:layout_width="wrap_content"
             android:layout_height="60dp"
             android:textSize="20sp"
             android:layout_weight="1"
             android:gravity="left|center_vertical" />

    </LinearLayout>

</LinearLayout>
