<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="34dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/id_dvbs_progress_count"
        android:singleLine="true"
        android:textSize="20sp"
        android:layout_width="56dp"
        android:layout_height="fill_parent" />

    <TextView
        android:id="@+id/id_dvbs_progress_name"
        android:singleLine="true"
        android:textSize="20sp"
        android:layout_width="160dp"
        android:layout_height="fill_parent" />

    <TextView
        android:id="@+id/id_dvbs_progress_freq"
        android:singleLine="true"
        android:textSize="20sp"
        android:layout_width="150dp"
        android:layout_height="fill_parent" />

    <TextView
        android:id="@+id/id_dvbs_progress_rate"
        android:singleLine="true"
        android:textSize="20sp"
        android:layout_width="150dp"
        android:layout_height="fill_parent" />

    <TextView
        android:id="@+id/id_dvbs_progress_polarity"
        android:singleLine="true"
        android:textSize="20sp"
        android:layout_width="40dp"
        android:layout_height="fill_parent" />

    <TextView
        android:id="@+id/id_dvbs_progress_status"
        android:singleLine="true"
        android:textSize="20sp"
        android:layout_width="110dp"
        android:layout_height="fill_parent" />

</LinearLayout>
