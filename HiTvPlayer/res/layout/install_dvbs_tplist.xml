<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="760dp"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:orientation="vertical" >

    <Button
        android:id="@+id/id_dvbs_tp_startscan"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_gravity="right"
        android:background="@drawable/install_btn_bg"
        android:text="@string/str_install_search"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <com.hisilicon.tvui.view.Combox
        android:id="@+id/id_dvbs_tp_satellite"
        android:background="@drawable/install_cbx_bg"
        android:textColor="@color/white"
        android:layout_width="756dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:textSize="22sp" >
    </com.hisilicon.tvui.view.Combox>

    <ListView
        android:id="@+id/id_dvbs_tp_list"
        android:layout_width="fill_parent"
        android:layout_height="320dp"
        android:layout_gravity="right"
        android:descendantFocusability="afterDescendants"
        android:divider="#00000000"
        android:dividerHeight="6dip"
        android:fadingEdge="none"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:listSelector="@drawable/install_list_item_right_slt"
        android:smoothScrollbar="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/id_dvbs_tp_add"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/common_red"
            android:focusable="false" >
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:gravity="left|center_vertical"
            android:text="@string/str_add"
            android:textSize="15sp" />

        <Button
            android:id="@+id/id_dvbs_tp_edit"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:background="@drawable/common_green"
            android:focusable="false" >
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:gravity="left|center_vertical"
            android:text="@string/str_edit"
            android:textSize="15sp" />

        <Button
            android:id="@+id/id_dvbs_tp_search"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:background="@drawable/common_yellow"
            android:focusable="false" >
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:gravity="left|center_vertical"
            android:text="@string/str_install_search"
            android:textSize="15sp" />

        <Button
            android:id="@+id/id_dvbs_tp_delete"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:background="@drawable/common_blue"
            android:focusable="false" >
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:gravity="left|center_vertical"
            android:text="@string/str_delete"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>
