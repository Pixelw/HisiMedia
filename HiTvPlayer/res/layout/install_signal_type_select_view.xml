<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:Combox="http://schemas.android.com/apk/res/com.hisilicon.tvui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/signal_type_whole_lay"
        android:layout_width="630dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_setting_view_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/signal_type_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/signal_type_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/str_signal_type_select"
                android:textColor="@color/white"
                android:textSize="30sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/line_wide" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="60dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:gravity="left|center_vertical"
                android:text="@string/str_install_scan_mode"
                android:textColor="@color/white"
                android:textSize="22sp" >
            </TextView>

            <com.hisilicon.tvui.view.Combox
                android:id="@+id/id_dvb_scan_mode"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/install_cbx_bg"
                android:textColor="@color/white"
                Combox:lineHeight="30sp"
                android:textSize="22sp" >
            </com.hisilicon.tvui.view.Combox>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="60dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:gravity="left|center_vertical"
                android:text="@string/str_install_tuner_signal"
                android:textColor="@color/white"
                android:textSize="22sp" >
            </TextView>

            <com.hisilicon.tvui.view.Combox
                android:id="@+id/id_dvb_tuner_signal"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/install_cbx_bg"
                android:textColor="@color/white"
                Combox:lineHeight="30sp"
                android:focusable="false"
                android:enabled="false"
                android:textSize="22sp" >
            </com.hisilicon.tvui.view.Combox>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="60dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:gravity="left|center_vertical"
                android:text="@string/str_install_tuner_device"
                android:textColor="@color/white"
                android:textSize="22sp" >
            </TextView>

           <com.hisilicon.tvui.view.Combox
                android:id="@+id/id_dvb_tuner_device"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/install_cbx_bg"
                android:textColor="@color/white"
                Combox:lineHeight="30sp"
                android:textSize="22sp" >
            </com.hisilicon.tvui.view.Combox>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="60dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:gravity="left|center_vertical"
                android:text="@string/str_install_scan_mode"
                android:textColor="@color/white"
                android:textSize="22sp" >
            </TextView>

            <com.hisilicon.tvui.view.Combox
                android:id="@+id/id_auto_scan_mode"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/install_cbx_bg"
                android:textColor="@color/white"
                Combox:lineHeight="30sp"
                android:textSize="22sp" >
            </com.hisilicon.tvui.view.Combox>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_layout_isdbt_oneseg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginStart="60dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:gravity="start|center_vertical"
                android:text="@string/str_install_oneseg"
                android:textColor="@color/white"
                android:textSize="22sp" >
            </TextView>
            <com.hisilicon.tvui.view.Combox
                android:id="@+id/id_isdbt_oneseg"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:background="@drawable/install_cbx_bg"
                android:textColor="@color/white"
                android:textSize="20sp" >
            </com.hisilicon.tvui.view.Combox>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_layout_atsc_cab_format"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="60dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:gravity="left|center_vertical"
                android:text="@string/str_install_atsc_cab_format"
                android:textColor="@color/white"
                android:textSize="22sp" >
            </TextView>
            <com.hisilicon.tvui.view.Combox
                android:id="@+id/id_atsc_cab_format"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:background="@drawable/install_cbx_bg"
                android:textColor="@color/white"
                android:textSize="20sp" >
            </com.hisilicon.tvui.view.Combox>
        </LinearLayout>

        <!--Service Type-->
        <LinearLayout
                android:id="@+id/id_layout_service_cab_format"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="60dp"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/str_install_service_cab_format"
                    android:textColor="@color/white"
                    android:textSize="22sp" >
            </TextView>
            <com.hisilicon.tvui.view.Combox
                    android:id="@+id/id_service_cab_format"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/install_cbx_bg"
                    android:textColor="@color/white"
                    android:textSize="20sp" >
            </com.hisilicon.tvui.view.Combox>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
            android:id="@+id/id_dvb_tuner_set_btn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/install_btn_bg"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="22sp" >
        </Button>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>