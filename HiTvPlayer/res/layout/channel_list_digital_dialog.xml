<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="694dp"
    android:layout_height="210dp"
    android:background="@drawable/custom_view_bg"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:text="@string/digital"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp">

            <Button
                android:id="@+id/button_channellist_digital_all"
                style="@style/button_channellist_alpha"
                android:layout_marginLeft="8dp" />

            <Button
                android:id="@+id/button_channellist_digital_0"
                style="@style/button_channellist_alpha" />

            <Button
                android:id="@+id/button_channellist_digital_1"
                style="@style/button_channellist_alpha" />

            <Button
                android:id="@+id/button_channellist_digital_2"
                style="@style/button_channellist_alpha" />

            <Button
                android:id="@+id/button_channellist_digital_3"
                style="@style/button_channellist_alpha" />

            <Button
                android:id="@+id/button_channellist_digital_4"
                style="@style/button_channellist_alpha" />

            <Button
                android:id="@+id/button_channellist_digital_5"
                style="@style/button_channellist_alpha" />

            <Button
                android:id="@+id/button_channellist_digital_6"
                style="@style/button_channellist_alpha" />

            <Button
                android:id="@+id/button_channellist_digital_7"
                style="@style/button_channellist_alpha" />

            <Button
                android:id="@+id/button_channellist_digital_8"
                style="@style/button_channellist_alpha" />

            <Button
                android:id="@+id/button_channellist_digital_9"
                style="@style/button_channellist_alpha"
                android:layout_marginRight="8dp"/>

    </TableRow>

</LinearLayout>
