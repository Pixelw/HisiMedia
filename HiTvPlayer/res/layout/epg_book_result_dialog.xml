<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="434dp"
    android:layout_height="290dp"
    android:background="@drawable/custom_setting_view_bg"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_epg_book_title"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/epg_book_title"
        android:textColor="@color/white"
        android:textSize="24sp" >
    </TextView>

    <TextView
        android:id="@+id/tv_epg_book_result_tip"
        android:layout_width="380dp"
        android:layout_height="65dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="5dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:maxLines="2"
        android:text="@string/string_null"
        android:textColor="@color/white"
        android:textSize="22sp" >
    </TextView>

    <ScrollView
        android:layout_width="380dp"
        android:layout_height="90dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <TextView
            android:id="@+id/tv_epg_book_result_info_tip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="@string/string_null"
            android:textColor="@color/white"
            android:textSize="18sp" >
        </TextView>
    </ScrollView>

    <LinearLayout
        android:id="@+id/llay_epg_book_exit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_epg_book_exit"
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:background="@drawable/epg_description_button"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/epg_button_exit"
            android:textColor="@color/white"
            android:textSize="20sp" >
        </Button>

        <Button
            android:id="@+id/btn_epg_book_goon"
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/epg_description_button"
            android:focusable="true"
            android:focusableInTouchMode="true"
            style="?android:attr/buttonBarButtonStyle"
            android:gravity="center"
            android:text="@string/epg_go_on_button"
            android:textColor="@color/white"
            android:textSize="20sp" >
        </Button>
    </LinearLayout>

</LinearLayout>
