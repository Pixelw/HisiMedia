<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/custom_view_bg"
              android:orientation="vertical">

    <TextView
            android:id="@+id/id_password_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:layout_marginTop="15dp"
            android:textSize="20sp"/>
    <TextView
            android:id="@+id/id_current_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:visibility="gone"/>
    <TextView
            android:id="@+id/id_current_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:visibility="gone"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">

        <EditText
                android:id="@+id/et_password_1"
                style="@style/edittext_style"
                android:inputType="numberPassword"
                android:textColor="@color/white"/>

        <EditText
                android:id="@+id/et_password_2"
                style="@style/edittext_style"
                android:inputType="numberPassword"
                android:textColor="@color/white"/>

        <EditText
                android:id="@+id/et_password_3"
                style="@style/edittext_style"
                android:inputType="numberPassword"
                android:textColor="@color/white"/>

        <EditText
                android:id="@+id/et_password_4"
                style="@style/edittext_style"
                android:inputType="numberPassword"
                android:textColor="@color/white"/>

    </LinearLayout>
    <TextView
            android:id="@+id/tv_password_wrong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:text="@string/password_wrong_tip"
            android:visibility="invisible"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"/>

</LinearLayout>
