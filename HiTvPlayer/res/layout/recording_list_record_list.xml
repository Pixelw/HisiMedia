<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="52dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/cb_record_enable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/recordinglist_checkbox"
        android:button="@null"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_record_date"
        android:layout_width="240dp"
        android:layout_height="52dp"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center|left"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_record_duration"
        android:layout_width="120dp"
        android:layout_height="52dp"
        android:layout_marginLeft="10dp"
        android:ellipsize="marquee"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center|left"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_record_channel"
        android:layout_width="240dp"
        android:layout_height="52dp"
        android:ellipsize="marquee"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center|left"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_record_name"
        android:layout_width="360dp"
        android:layout_height="52dp"
        android:layout_marginLeft="10dp"
        android:ellipsize="marquee"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center|left"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_record_cycle"
        android:layout_width="100dp"
        android:layout_height="52dp"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center|left"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="24sp" />

</LinearLayout>
