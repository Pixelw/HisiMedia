<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/restore_textview"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:gravity="center_vertical|center_horizontal"
        android:lineSpacingExtra="10dp"
        android:text="@string/setting_restore_tip_message"
        android:textSize="20sp" />

    <Button
        android:id="@+id/restore_default_config"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/install_cbx_bg"
        android:nextFocusDown="@+id/restore_default_config"
        android:text="@string/setting_yes"
        android:textColor="@color/white" />

</LinearLayout>
