<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="NoTitleBar.Fullscreen.WindowBackgroundTranslucent" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="dialogStyle" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowIsFloating">true</item>
 <!-- 是否浮现在activity之上 -->
        <item name="android:backgroundDimEnabled">false</item>
 <!-- 模糊 -->
    </style>

    <style name="inputDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item>
    </style>

    <style name="BackgroundNull_Style" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="myTransparent">
        <item name="android:windowBackground">@color/transparent_full</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="button_channellist_alpha" parent="@android:attr/buttonStyleSmall">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:text">@string/all</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>

    <style name="dialog_transparent" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">#00000000</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="dialog_transparent_fullScreen" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">false</item>
      <item name="android:windowNoTitle">true</item>    
       <item name="android:windowIsTranslucent">true</item>       
    </style>
    <style name="edittext_style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/editbox_selector</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:maxEms">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="dialog_notitle_style" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DIM_STYLE" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustPan</item>
        -         <!-- true - activity变暗，false-activity不变暗 -->
    </style>

    <style name="dim_holo_style" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="styleDolbyInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ccf0ffff</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:shadowColor">#ccd3d3d3</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:gravity">center|left|center_vertical</item>
    </style>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fill_wrap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_fill">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="fill_fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="time_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/media_init_time</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="button_focus">
        <item name="android:layout_width">70px</item>
        <item name="android:layout_height">70px</item>
        <item name="android:background">@drawable/icon_focus</item>
    </style>

    <style name="pvrDialog" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="options_more">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- channel_item_layout.xml -->
    <style name="channel_item_layout_tv">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
    </style>

    <!-- videoview.xml -->
    <style name="channel_all_size">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Translucent_NoTitle_Noframe">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
