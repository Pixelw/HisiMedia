<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/tag_app"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusLeft="@+id/tag_setting"
        android:nextFocusRight="@+id/tag_setting" >

        <TextView
            android:id="@+id/tag_app_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/tag_app"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/tag_app_img"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/tag_selected"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tag_setting"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="40dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusLeft="@+id/tag_app"
        android:nextFocusRight="@+id/tag_app" >

        <TextView
            android:id="@+id/tag_setting_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="@string/tag_setting"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/tag_setting_img"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:src="@drawable/tag_selected"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>
