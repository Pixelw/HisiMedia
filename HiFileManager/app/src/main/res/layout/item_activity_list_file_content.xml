<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_file_size"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_file_list_tv_size_height"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/item_file_list_tv_size_margin_right"
        android:gravity="right|center_vertical" />

    <ImageView
        android:id="@+id/iv_file_icon"
        android:layout_width="@dimen/item_file_list_img_width"
        android:layout_height="@dimen/item_file_list_img_height"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/item_file_list_img_margin_left"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/tv_file_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/item_file_list_tv_title_margin_left"
        android:layout_marginTop="@dimen/item_file_list_tv_title_margin_top"
        android:layout_toLeftOf="@id/tv_file_size"
        android:layout_toRightOf="@id/iv_file_icon"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:textSize="@dimen/item_file_list_tv_title_size"
        android:singleLine="true" />

</RelativeLayout>