<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="@dimen/menu_padding"
        android:textColor="@color/white"
        android:textSize="@dimen/menu_et_title_size" />

    <TextView
        android:id="@+id/tv_notice_content"
        android:layout_width="@dimen/item_nfs_add_400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="@dimen/menu_padding" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="@dimen/menu_btn_width"
            android:layout_height="wrap_content"
            android:background="@drawable/butselector"
            android:padding="@dimen/menu_padding"
            android:text="@string/ok"
            android:layout_marginRight="@dimen/menu_btn_margin_right"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/menu_btn_width"
            android:layout_height="wrap_content"
            android:background="@drawable/butselector"
            android:padding="@dimen/menu_padding"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/menu_et_title_size" />
    </LinearLayout>
</LinearLayout>