<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_file_count"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:textSize="@dimen/tv_folder_title_char_size"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_folder_title"
        android:layout_toLeftOf="@id/tv_file_count"
        android:layout_alignParentLeft="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_marginLeft="@dimen/tv_folder_title_margin4"
        android:layout_marginRight="@dimen/tv_folder_title_margin4"
        android:textSize="@dimen/tv_folder_title_char_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true" />
</RelativeLayout>